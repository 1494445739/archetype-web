    "@angular/http": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/router": "^4.0.0",
    "bootstrap": "^3.3.7",
    "core-js": "^2.4.1",
    "font-awesome": "^4.7.0",
    "primeng": "^4.0.0",
    "rxjs": "^5.1.0",
    "zone.js": "^0.8.11",

    "@tzg/ng-shared": "~1.0.2",
    "@tzg/ng-auth": "~1.0.2"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^4.0.3",
    "@types/node": "~6.0.60",
    "@types/source-map": "^0.5.0",
