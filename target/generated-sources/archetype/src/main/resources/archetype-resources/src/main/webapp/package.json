    "less-loader": "^4.0.3",
    "raw-loader": "^0.5.1",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.16.1",
    "to-string-loader": "^1.1.5",
    "ts-node": "~2.0.0",
    "tslint": "^5.1.0",
