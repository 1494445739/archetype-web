{
  "name": "${package}",
  "version": "${version}",
  "scripts": {
    "build": "set NODE_ENV=prod && webpack --config ./webpack.config.js",
    "build:dev": "set NODE_ENV=dev && webpack --config ./webpack.config.js",
    "build:dev.watch": "set NODE_ENV=dev && webpack --config ./webpack.config.js --watch",
    "build:dll": "set NODE_ENV=dll && webpack --config ./webpack.config.js",
    "build:profile": "set NODE_ENV=dev && webpack --config ./webpack.config.js --profile --json > webpack-profile.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.0.0",
